<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<mapping resource="Class.hbm.xml" />
		<mapping resource="Student.hbm.xml" />
		<mapping resource="User.hbm.xml" />
		<mapping resource="Grade.hbm.xml" />
		<mapping class="com.giang.model.Class" />
		<mapping class="com.giang.model.Student" />
		<mapping class="com.giang.model.User" />
		<mapping class="com.giang.model.Grade" />
		
		<mapping class="com.giang.model.StudentCustom" />


	</session-factory>
</hibernate-configuration>